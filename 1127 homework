/*
 //368pg 7번
int get_tax(int income);	

void main() {
	int in;
	printf("소득을 입력하시오(만원):");
	scanf_s("%d", &in);

	printf("소득세는 %d만원입니다.\n", get_tax(in));
}

int get_tax(int income) {
	int r;

	if (income < 1000)
		r = income * 0.08;
	else
		r = 80 + (income - 1000) * 0.1; //1000만원이상의 수익의 소득세를 구할 때 1000만원이상의 금액에 대해서만 10%의 세금을 지불하고 1000만원 이하의 금액은 80만원으로 고정된다.

	return r;
}
