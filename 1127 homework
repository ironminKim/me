/*
 // 413pg 12번
int fib(int n);

int main(void)
{
	for (int i = 0; i < 10; i++)
	{
		printf("f(%d) = %d \n", i, fib(i));

	}
	return 0;
}

int fib(int n)
{
	if (n == 0) return 0;
	else if (n == 1) return 1;
	else return fib(n - 2) + fib(n - 1);
}
