/*
// 270pg 16번
double facto(double n);
int main(void)
{
	int n, i;
	double j, k;
	k = 1;

	printf("어디까지 계산할까요: ");
	scanf("%d", &n);

	for (i = 1; i <= n; i++)
	{
		j = 1 / facto(i);
		k = k + j;
	}
	printf("오일러의 수는 %f입니다.\n", k);

	return 0;

}

double facto(double n)
{
	double i, j;
	j = 1;
	for (i = 1; i <= n; i++)
	{
		j *= i;

	}
	return j;
}
